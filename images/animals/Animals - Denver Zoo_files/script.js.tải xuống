function dz_reset_tribe_nav_arrow() {
    if ($(".tribe-events-nav-pagination li.tribe-events-nav-next a").length <= 0) {
        $(".tribe-events-page-title-wrap-custom .event-nav-right-arrow").addClass("nav-arrow-visible-hidden");
    } else {
        $(".tribe-events-page-title-wrap-custom .event-nav-right-arrow").removeClass("nav-arrow-visible-hidden");
    }
    if ($(".tribe-events-nav-pagination li.tribe-events-nav-previous a").length <= 0) {
        $(".tribe-events-page-title-wrap-custom .event-nav-left-arrow").addClass("nav-arrow-visible-hidden");
    } else {
        $(".tribe-events-page-title-wrap-custom .event-nav-left-arrow").removeClass("nav-arrow-visible-hidden");
    }
}


$(function () {
    if ($(".zoo-event-start-date").length > 0) {
        var dateFormat = "yy-mm-dd",
                from = $(".zoo-event-start-date")
                .datepicker({
                    dateFormat: "yy-mm-dd",
                    showOn: "button",
                    minDate: 0,
                    beforeShowDay: function (date) {
                        setTimeout(function () {
                            $("#ui-datepicker-div").find(".ui-state-highlight").removeClass("ui-state-highlight");
                        },100);
                        return [true, '', ''];
                    },
                    buttonText: "",
                    onSelect: function(dateText) {
                        var dateText = $.datepicker.formatDate("mm/dd/yy", $(this).datepicker("getDate"));
                        $('.dz-from span').text(dateText);
                        var thisDate = $(this).datepicker("getDate");
                        to.datepicker("option", "minDate", thisDate);
                        jQuery(this).closest("form").submit();
                    }
                })
                .on("change", function () {
                    // var thisDate = $(this).datepicker("getDate");
                    // $(".zoo-event-end-date").datepicker("option", "minDate", thisDate);
                    // console.log(thisDate);
                   
                }),
                to = $(".zoo-event-end-date").datepicker({
                    dateFormat: "yy-mm-dd",
                    showOn: "button",
                    minDate: 0,
                    beforeShowDay: function(date) {
                        var selectedDate = $(this).datepicker('getDate'),
                        fromDate = from.datepicker('getDate');
                        if (!fromDate || !selectedDate) {
                            return [true]
                        }
                        var dateClass = '';
                        if (date > fromDate && date < selectedDate) {
                          dateClass = 'between-date';
                  
                        } else if (+date == +selectedDate) {
                          dateClass = 'end-date';
                        } else if (+date == +fromDate) {
                          dateClass = 'start-date';
                        }
                        return [true, dateClass];
                         
                    },
                    buttonText: "",
                    onSelect: function(dateText) {
                        var dateText = $.datepicker.formatDate("mm/dd/yy", $(this).datepicker("getDate"));
                        $('.dz-to span').text(dateText);
                       // alert("Selected date: " + dateText + "; input's current value: " + this.value);
                       jQuery(this).closest("form").submit();
                    }
                })
                .on("change", function () {
                    
                    //from.datepicker("option", "maxDate", getDate(this));
                });

        function getDate(element) {
            var date;
            try {
                date = $.datepicker.parseDate(dateFormat, element.value);
            } catch (error) {
                date = null;
            }

            return date;
        }
    }
});

$(function() {
    $('#latestpostslider .jcarousel')
    .on('jcarousel:create jcarousel:reload', function() {
        var element = $(this),
            width = element.innerWidth();

        if (width > 900) {
            width = width / 3;
        } else if (width > 600) {
            width = width / 2;
        }

        element.jcarousel('items').css('width', width + 'px');
    })
    .jcarousel({
        // Your configurations options
    });

    $('#latestnews .jcarousel')
    .on('jcarousel:create jcarousel:reload', function() {
        var element = $(this),
            width = element.innerWidth();

        if (width > 900) {
            width = width / 3;
        } else if (width > 600) {
            width = width / 2;
        }

        element.jcarousel('items').css('width', width + 'px');
    })
    .jcarousel({
        // Your configurations options
    });

    $('#newsslider .jcarousel')
    .on('jcarousel:create jcarousel:reload', function() {
        var newelement = $(this),
            width = newelement.innerWidth();

        if (width > 900) {
            width = width / 3;
        } else if (width > 600) {
            width = width / 3;
        }

        newelement.jcarousel('items').css('width', width + 'px');
    })
    .jcarousel({
        // Your configurations options
    }).touchwipe({
        wipeLeft: function() {
            $('#newsslider .jcarousel').jcarousel('scroll', '+=1');
        },
        wipeRight: function() {
            $('#newsslider .jcarousel').jcarousel('scroll', '-=1');
        }
    });


    $('#galleryslider .jcarousel')
    .on('jcarousel:create jcarousel:reload', function() {
        var element = $(this),
            width = element.innerWidth();
            
        if (width >= 720) {
            width = width / 4;
        } else if (width < 600) {
            width = width / 2;
        }

        element.jcarousel('items').css('width', width + 'px');
    })
    .jcarousel({
        // Your configurations options
    });

    
      
    

    
    
    
