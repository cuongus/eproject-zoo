            var matched, browser;

                jQuery.uaMatch = function( ua ) {
                    ua = ua.toLowerCase();

                    var match = /(chrome)[ \/]([\w.]+)/.exec( ua ) ||
                        /(webkit)[ \/]([\w.]+)/.exec( ua ) ||
                        /(opera)(?:.*version|)[ \/]([\w.]+)/.exec( ua ) ||
                        /(msie) ([\w.]+)/.exec( ua ) ||
                        ua.indexOf("compatible") < 0 && /(mozilla)(?:.*? rv:([\w.]+)|)/.exec( ua ) ||
                        [];

                    return {
                        browser: match[ 1 ] || "",
                        version: match[ 2 ] || "0"
                    };
                };

                matched = jQuery.uaMatch( navigator.userAgent );
                browser = {};

                if ( matched.browser ) {
                    browser[ matched.browser ] = true;
                    browser.version = matched.version;
                }

             $(document).click(function(e) { 
                
                if(browser.chrome) {
                    var ele = $(e.toElement); 
                    
                    if (!ele.hasClass("hasDatepicker") && !ele.hasClass("visit_date_picker") && !ele.hasClass("ui-datepicker") && !ele.hasClass("ui-icon") && !$(ele).parent().parents(".ui-datepicker").length){
                        console.log("OUtSide");
                        $("#visit_schedule_calendar").hide();
                    }else{
                        console.log("inSide");
                    }

                } else if (browser.mozilla) {
                    var elem = (e.target);
                    if($(e.target).attr('class')){
                       var classname = $(e.target).attr('class'); 
                    }

                    if(classname != "hasDatepicker" && classname != "visit_date_picker" && classname != "ui-datepicker" && classname != "ui-icon" && classname != "ui-datepicker"){
                            console.log("OUtSide");
                        $("#visit_schedule_calendar").hide();
                    }else{
                        console.log("inSide");
                    }
                } 
            });
       
    }
