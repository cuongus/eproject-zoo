                    $('.html5-nav-thumb[data-arrayindex = '+lastEm+']').addClass('active');
                }else{
                    $('.html5-nav-thumb[data-arrayindex = '+prevEm+']').addClass('active');
                }
                return false; 
            }
        });
    });
    
